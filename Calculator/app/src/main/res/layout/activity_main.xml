<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/lightGrey"
        android:padding="10dp"
        android:textSize="48sp"
        android:gravity="bottom|end"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnSeven"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_7"/>
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_8"/>
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnNine"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_9"/>
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnDivided"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_Divide"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnFour"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_4"/>
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnFive"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_5"/>
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnSix"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_6"/>
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnMultiplication"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_Multiplication"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnOne"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_1"/>
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnTwo"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_2"/>
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnThree"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_3"/>
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnSum"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_Sum"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnDot"
            android:onClick="onDecimalPoint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_dot"/>
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnZero"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_0"/>
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnPoint"
            android:onClick="clearOnClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_Clear"/>
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/btnMinus"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_Minus"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:backgroundTint="@color/darkGrey"
            android:layout_margin="2dp"
            android:id="@+id/res"
            android:onClick="onDigit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/_Result"/>
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>